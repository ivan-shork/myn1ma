/* 自定义导航栏 */
.nav-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
  background: #FFF5F7;
}

.nav-status-bar {
  width: 100%;
}

.nav-title-area {
  height: 44px;
  display: flex;
  align-items: center;
  position: relative;
}

.nav-back {
  position: absolute;
  left: 16px;
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(93, 78, 96, 0.1);
  border-radius: 50%;
  font-size: 20px;
  color: #5D4E60;
  font-weight: 300;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 18px;
  font-weight: 600;
  color: #5D4E60;
  letter-spacing: 1rpx;
}

.detail-scroll-wrapper {
  position: fixed;
  left: 0;
  right: 0;
  background: #FFF5F7;
}

.detail-page {
  background: #FFF5F7;
}

/* 图片轮播 */
.image-swiper-container {
  position: relative;
  width: 100%;
  height: 500rpx;
  background: #000;
}

.image-swiper {
  width: 100%;
  height: 100%;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.image-badge {
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  backdrop-filter: blur(10rpx);
}

.image-decoration {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  font-size: 36rpx;
  animation: twinkle 2s ease-in-out infinite;
}

@keyframes twinkle {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.5;
    transform: scale(0.9);
  }
}

/* 内容区域 */
.content-container {
  padding: 24rpx;
  padding-bottom: 120rpx;
}

/* 标题卡片 */
.title-card {
  background: #fff;
  padding: 32rpx 28rpx;
  border-radius: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 182, 193, 0.15);
  border: 2rpx solid #FFF0F5;
}

.title-text {
  font-size: 38rpx;
  font-weight: 600;
  color: #5D4E60;
  line-height: 1.4;
}

/* 信息卡片 */
.info-cards {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.info-card {
  background: #fff;
  padding: 16rpx 24rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 182, 193, 0.12);
  border: 2rpx solid #FFF0F5;
}

.info-emoji {
  font-size: 28rpx;
}

.info-text {
  font-size: 26rpx;
  color: #8B7E8F;
}

/* 区块 */
.section-block {
  background: #fff;
  padding: 28rpx;
  border-radius: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 182, 193, 0.15);
  border: 2rpx solid #FFF0F5;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 20rpx;
}

.section-emoji {
  font-size: 28rpx;
}

.section-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #5D4E60;
}

/* 参与人员 */
.participants-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.participant-tag {
  padding: 10rpx 20rpx;
  background: linear-gradient(135deg, #FFF5F7, #FFFAFC);
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #8B7E8F;
  border: 2rpx solid #FFE4E1;
}

/* 评分面板 */
.rating-section {
  margin-bottom: 20rpx;
  position: relative;
}

.rating-section .section-header {
  position: relative;
}

.average-rating-badge {
  margin-left: auto;
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, #FFB6C1, #FFC0CB);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 182, 193, 0.3);
}

.average-rating-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #fff;
}

.rating-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.rating-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx;
  background: #FFF5F7;
  border-radius: 20rpx;
  border: 2rpx solid #FFE4E1;
}

.rating-person {
  display: flex;
  align-items: center;
  gap: 8rpx;
  min-width: 140rpx;
}

.rating-avatar {
  font-size: 32rpx;
}

.rating-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #5D4E60;
}

.rating-selector {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.rating-picker {
  padding: 10rpx 24rpx;
  background: #fff;
  border-radius: 16rpx;
  border: 2rpx solid #FFE4E1;
  font-size: 24rpx;
  color: #D8C8D8;
  text-align: center;
}

.rating-picker.has-rating {
  background: linear-gradient(135deg, #A8E6CF, #88D4AB);
  color: #fff;
  border-color: #88D4AB;
  font-weight: 600;
}

.rating-picker.has-low-rating {
  background: linear-gradient(135deg, #FFB6B9, #FA8C8C);
  color: #fff;
  border-color: #FA8C8C;
}

/* 最终得分盖章 */
.final-rating-stamp {
  position: absolute;
  top: 10rpx;
  right: 30rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx dashed rgba(136, 212, 171, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 700;
  color: rgba(136, 212, 171, 0.5);
  transform: rotate(-15deg);
  pointer-events: none;
  background: radial-gradient(circle, rgba(136, 212, 171, 0.1) 0%, transparent 70%);
}

.final-rating-stamp.stamp-low {
  border-color: rgba(250, 140, 140, 0.4);
  color: rgba(250, 140, 140, 0.5);
  background: radial-gradient(circle, rgba(250, 140, 140, 0.1) 0%, transparent 70%);
}

.rating-score {
  min-width: 80rpx;
  text-align: center;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #FFB6C1, #FFC0CB);
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 600;
  color: #fff;
}

/* 描述 */
.description-text {
  font-size: 28rpx;
  color: #8B7E8F;
  line-height: 1.7;
}

/* 评论区 */
.comments-section {
  margin-bottom: 0;
}

.comments-list {
  margin-top: 8rpx;
}

.comment-item {
  display: flex;
  gap: 16rpx;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #FFF5F7;
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #A8E6CF, #88D4AB);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #fff;
  flex-shrink: 0;
}

.comment-body {
  flex: 1;
  min-width: 0;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.comment-author {
  font-size: 26rpx;
  font-weight: 600;
  color: #5D4E60;
}

.comment-time {
  font-size: 22rpx;
  color: #B8A8BA;
}

.comment-content {
  font-size: 28rpx;
  color: #8B7E8F;
  line-height: 1.5;
  word-break: break-all;
}

/* 空评论状态 */
.empty-comments {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.empty-emoji {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 26rpx;
  color: #B8A8BA;
}

/* 底部评论输入 */
.comment-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx 24rpx;
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(255, 182, 193, 0.1);
  safe-area-inset-bottom;
}

.comment-input-wrapper {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.comment-input {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  padding: 0 24rpx;
  background: #FFF5F7;
  border-radius: 36rpx;
  font-size: 28rpx;
  border: 2rpx solid #FFE4E1;
}

.comment-input::placeholder {
  color: #D8C8D8;
}

.send-btn {
  width: 72rpx;
  height: 72rpx;
  background: linear-gradient(135deg, #A8E6CF, #88D4AB);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.send-btn.sending {
  opacity: 0.6;
}

.send-icon {
  font-size: 32rpx;
}

/* 加载状态 */
.loading-page {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  background: #FFF5F7;
}

.loading-icon {
  font-size: 80rpx;
  animation: spin 1.5s linear infinite;
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #9B8E9F;
}

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.memory-info {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.info-row {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 15rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #666;
  width: 120rpx;
}

.value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.activity-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.activity-buttons {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.activity-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: none;
  border: none;
  padding: 20rpx;
}

.activity-button text {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.comments-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
}

.comment-item {
  border-bottom: 1rpx solid #eee;
  padding: 20rpx 0;
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-header {
  margin-bottom: 10rpx;
}

.comment-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.comment-content {
  margin-bottom: 10rpx;
}

.comment-content text {
  font-size: 26rpx;
  color: #666;
  line-height: 40rpx;
}

.comment-actions {
  display: flex;
  flex-direction: row;
}

.action-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 30rpx;
}

.action-item text {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #999;
}
.container {
  padding: 120rpx 0 0;
  background-color: #f5f5f5;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  align-items: stretch;
  width: 100%;
}

.header {
  padding: 20rpx 30rpx;
  margin: 0 30rpx 30rpx;
  background-color: rgba(255, 255, 255, 0.95);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.title {
  font-size: 38rpx;
  font-weight: 600;
  color: #2c3e50;
  text-align: center;
  letter-spacing: 1rpx;
}

.timeline-container {
  position: relative;
  padding: 10rpx 50rpx 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.timeline-item {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin-bottom: 40rpx;
}

.timeline-line {
  position: absolute;
  left: 12rpx;
  top: 30rpx;
  width: 4rpx;
  height: calc(100% + 40rpx);
  background: linear-gradient(to bottom, #a29bfe, #6c5ce7);
  z-index: 1;
  border-radius: 2rpx;
}

.timeline-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #a29bfe, #6c5ce7);
  border: 3rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(108, 92, 231, 0.4);
  z-index: 2;
  margin-right: 20rpx;
  margin-top: 14rpx;
  flex-shrink: 0;
}

.memory-content {
  flex: 1;
}

.memory-date {
  font-size: 28rpx;
  color: #e0e6ed;
  font-weight: 600;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.4);
  padding-left: 10rpx;
  letter-spacing: 0.5rpx;
}

.memory-item {
  border-radius: 20rpx;
  overflow: hidden;
  background-color: rgba(255, 255, 255, 0.95);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
  width: 100%;
  backdrop-filter: blur(10rpx);
}

.memory-item:hover {
  transform: translateY(-6rpx);
  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.2);
}

.card-content {
  display: flex;
  flex-direction: row;
  padding: 28rpx;
  width: 100%;
}

.memory-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  object-fit: cover;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.memory-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0; /* 防止内容溢出 */
}

.info-row {
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 日期样式已移至memory-date */

.place {
  font-size: 32rpx;
  color: #2c3e50;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

.persons {
  font-size: 28rpx;
  color: #5d6d7e;
  letter-spacing: 0.5rpx;
}

.add-button {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #a29bfe, #6c5ce7);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(108, 92, 231, 0.4);
  z-index: 999;
  transition: all 0.3s ease;
}
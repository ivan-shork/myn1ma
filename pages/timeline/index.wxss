/* 滚动容器 */
.timeline-scroll-wrapper {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, #FFF5F7 0%, #FFF9FA 50%, #FFFFFF 100%);
}

/* 状态栏占位 */
.status-bar-spacer {
  width: 100%;
}

/* 容器 */
.container {
  width: 100%;
  padding: 0;
  background: transparent;
}

/* 云朵装饰 */
.cloud-decoration {
  position: relative;
  height: 80rpx;
  padding-top: 40rpx;
  overflow: hidden;
}

.cloud {
  position: absolute;
  font-size: 60rpx;
  opacity: 0.6;
  animation: float 6s ease-in-out infinite;
}

.cloud-1 {
  top: 20rpx;
  left: 60rpx;
  animation-delay: 0s;
}

.cloud-2 {
  top: 40rpx;
  right: 80rpx;
  font-size: 45rpx;
  animation-delay: 2s;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-15rpx);
  }
}

/* 时间线容器 */
.timeline-container {
  margin-top: 100rpx;
  position: relative;
  /* padding: 10rpx 32rpx 180rpx; */
  width: 90%;
}

/* 时间线项 */
.timeline-item {
  width: 100%;
  margin-bottom: 32rpx;
}

/* 记忆卡片 */
.memory-card {
  position: relative;
  width: 100%;
  background: #fff;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(255, 182, 193, 0.2);
  border: 3rpx solid #FFF0F5;
  transition: all 0.3s ease;
}

.memory-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 20rpx rgba(255, 182, 193, 0.3);
}

/* 卡片装饰星星 */
.card-star {
  position: absolute;
  font-size: 28rpx;
  z-index: 2;
  animation: twinkle 2s ease-in-out infinite;
}

.star-1 {
  top: 16rpx;
  right: 20rpx;
  animation-delay: 0s;
}

.star-2 {
  bottom: 100rpx;
  left: 16rpx;
  font-size: 24rpx;
  animation-delay: 1s;
}

@keyframes twinkle {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.5;
    transform: scale(0.9);
  }
}

/* 图片区域 */
.card-image-wrapper {
  position: relative;
  width: 100%;
  height: 360rpx;
  overflow: hidden;
}

.card-image {
  width: 100%;
  height: 100%;
  border-radius: 28rpx 28rpx 0 0;
}

.image-shadow {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60rpx;
  background: linear-gradient(to top, rgba(0,0,0,0.1), transparent);
}

/* 卡片内容区 */
.card-body {
  width: 100%;
  padding: 28rpx 28rpx 32rpx;
  position: relative;
  box-sizing: border-box;
}

/* 卡片印章 */
.card-rating-stamp {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  border: 3rpx dashed rgba(136, 212, 171, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 700;
  color: rgba(136, 212, 171, 0.5);
  transform: rotate(-15deg);
  pointer-events: none;
  z-index: 9999;
}

.card-rating-stamp.stamp-low {
  border-color: rgba(250, 140, 140, 0.4);
  color: rgba(250, 140, 140, 0.5);
  background: radial-gradient(circle, rgba(250, 140, 140, 0.1) 0%, transparent 70%);
}

.card-title {
  width: 100%;
  font-size: 36rpx;
  font-weight: 600;
  color: #5D4E60;
  margin-bottom: 20rpx;
  line-height: 1.4;
  word-wrap: break-word;
}

/* 卡片元信息 */
.card-meta {
  display: flex;
  align-items: center;
  width: fit-content;
  max-width: 100%;
  margin-bottom: 12rpx;
  padding: 8rpx 16rpx;
  background: #FFF5F7;
  border-radius: 20rpx;
}

.meta-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
  flex-shrink: 0;
}

.meta-text {
  font-size: 26rpx;
  color: #8B7E8F;
  word-wrap: break-word;
  word-break: break-all;
}

/* 卡片描述 */
.card-desc {
  margin-top: 16rpx;
  padding: 16rpx 20rpx;
  background: #FFFAFC;
  border-radius: 16rpx;
  font-size: 26rpx;
  color: #9B8E9F;
  line-height: 1.6;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
  padding: 0 60rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20rpx);
  }
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #5D4E60;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #9B8E9F;
  text-align: center;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
}

.loading-icon {
  font-size: 80rpx;
  animation: spin 1.5s linear infinite;
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #9B8E9F;
}

/* 新建按钮 - 轻快卡通风 */
.add-button {
  position: fixed;
  right: 32rpx;
  bottom: 32rpx;
  z-index: 999;
}

.add-btn-inner {
  position: relative;
  width: 90rpx;
  height: 90rpx;
  background: linear-gradient(135deg, #A8E6CF 0%, #88D4AB 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(168, 230, 207, 0.5);
  border: 3rpx solid #fff;
  transition: all 0.3s ease;
  z-index: 1;
}

.add-btn-inner:active {
  transform: scale(0.95);
}

.add-icon {
  font-size: 36rpx;
}

.add-btn-shadow {
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 16rpx;
  background: rgba(168, 230, 207, 0.4);
  border-radius: 50%;
  filter: blur(8rpx);
}

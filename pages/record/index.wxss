.container {
  padding: 120rpx 30rpx 120rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  box-sizing: border-box;
  align-items: stretch;
  width: 100%;
}

/* 覆盖全局页面样式 */
page {
  background: transparent;
}

/* 标题区域 */
.header {
  margin-bottom: 40rpx;
  text-align: center;
  animation: fadeInDown 0.6s ease-out;
}

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #fff;
  letter-spacing: 2rpx;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  position: relative;
  display: inline-block;
}


.subtitle {
  font-size: 28rpx;
  color: #a0a8b8;
  letter-spacing: 1rpx;
  margin-top: 20rpx;
  opacity: 0.9;
}

/* 表单区域 */
.form-container {
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(10rpx);
  margin-bottom: 40rpx;
}

/* 自定义单元格样式 */
.t-cell {
  padding: 30rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease;
}

.t-cell:last-child {
  border-bottom: none;
}

.t-cell__title {
  font-size: 32rpx;
  color: #2c3e50;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  display: flex;
  align-items: center;
}

.t-cell__title::before {
  content: '';
  display: inline-block;
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(135deg, #a29bfe, #6c5ce7);
  margin-right: 16rpx;
  border-radius: 4rpx;
}

/* 输入框样式 */
.t-input {
  font-size: 30rpx;
  color: #34495e;
}

.t-input__control {
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  transition: all 0.2s ease;
}

.t-input__control:focus {
  border-color: #6c5ce7;
  box-shadow: 0 0 0 4rpx rgba(108, 92, 231, 0.1);
}

/* 日期选择器样式 */
picker {
  font-size: 30rpx;
  color: #34495e;
  padding: 16rpx 20rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 12rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.08);
  transition: all 0.2s ease;
}

picker:active {
  border-color: #6c5ce7;
  box-shadow: 0 0 0 4rpx rgba(108, 92, 231, 0.1);
}

/* 评分组件样式 */
.t-rate {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
}

.t-rate__item {
  margin-right: 8rpx;
  transition: all 0.2s ease;
}

.t-rate__item:hover {
  transform: scale(1.1);
}

/* 表单容器动画 */
.form-container {
  animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 提交按钮样式 */
.submit-button {
  margin-top: 60rpx;
  padding: 0 30rpx;
  animation: fadeInUp 0.8s ease-out;
}

/* 使用更具体的选择器覆盖t-button组件样式 */
.submit-button .t-button,
.submit-button .t-button--theme-primary {
  height: 96rpx !important;
  border-radius: 48rpx !important;
  font-size: 32rpx !important;
  font-weight: 600 !important;
  letter-spacing: 2rpx !important;
  background: #ffffff !important;
  color: #6c5ce7 !important;
  border: 2rpx solid #6c5ce7 !important;
  box-shadow: 0 8rpx 24rpx rgba(108, 92, 231, 0.2) !important;
  transition: all 0.3s ease !important;
  position: relative !important;
  overflow: hidden !important;
}

/* 按钮光效动画 */
.submit-button .t-button::before,
.submit-button .t-button--theme-primary::before {
  content: '' !important;
  position: absolute !important;
  top: 0 !important;
  left: -100% !important;
  width: 100% !important;
  height: 100% !important;
  background: linear-gradient(90deg, transparent, rgba(108, 92, 231, 0.1), transparent) !important;
  transition: left 0.5s !important;
}

.submit-button .t-button:active::before,
.submit-button .t-button--theme-primary:active::before {
  left: 100% !important;
}

/* 按钮点击状态 */
.submit-button .t-button:active,
.submit-button .t-button--theme-primary:active {
  transform: translateY(2rpx) !important;
  box-shadow: 0 4rpx 12rpx rgba(108, 92, 231, 0.15) !important;
  background: #f8f9fa !important;
}